# ---- .ENV Configuration ----

# Application settings
URL = "http://localhost/azurin/public/"
HTTPS_FORCE = false

# Development mode
DEV_MODE = false

# Hot reload (development mode only)
HR_ENABLE = false
HR_WATCHER = "//localhost/azurin/azurin/Framework/HotReload/init.php"

# Enable/disable template engine by default
TED_ENABLE = false

# Route settings
DEFAULT_CONTROLLER = "home"
DEFAULT_METHOD = "index"

# Database settings
DB_HOST = "localhost"
DB_NAME = "database"
DB_USERNAME = "root"
DB_PASSWORD = ""
DB_PORT = 3306

# Cache settings (sec)
CACHE_DEFAULT_EXPIRE = 30

# Content security policy
CSP_ENABLE = false
CSP_FILE = "csp.json"

# Encryption
ENCRYPTION_KEY = "secret-encryption-key"
